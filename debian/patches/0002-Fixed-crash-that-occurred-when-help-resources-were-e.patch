Subject: [PATCH 2/2] Fixed crash that occurred when help resources were
 excluded and a specific help page was requested by name and not through the
 help dialog (link on Annotation Mode warning dialog).

---
 src/GuiQt/GuiManager.cxx | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/src/GuiQt/GuiManager.cxx b/src/GuiQt/GuiManager.cxx
index 1563a4289..c6396783b 100644
--- a/src/GuiQt/GuiManager.cxx
+++ b/src/GuiQt/GuiManager.cxx
@@ -1602,7 +1602,9 @@ GuiManager::receiveEvent(Event* event)
         
         showHideHelpDialog(true,
                            helpEvent->getBrainBrowserWindow());
-        m_helpViewerDialog->showHelpPageWithName(helpEvent->getHelpPageName());
+        if (m_helpViewerDialog != NULL) {
+            m_helpViewerDialog->showHelpPageWithName(helpEvent->getHelpPageName());
+        }
         
         helpEvent->setEventProcessed();
     }
@@ -2177,7 +2179,7 @@ GuiManager::showHideHelpDialog(const bool status,
         
         m_helpViewerDialog->showDialog();
     }
-    else {
+    else if (m_helpViewerDialog != NULL) {
         m_helpViewerDialog->close();
     }
     
